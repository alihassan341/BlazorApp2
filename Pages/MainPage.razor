@page "/"

<div class="d-flex h-100 w-100">
    <div class="left-menu w-16 overflow-auto h-100">
         <Sidebar ElementEvent="EventValue"/>
    </div>

    <div class="content w-64 p-0">
        <Content ElementName="@EventRoute" />
    </div>

    <div class="setting w-20">
        <Setting/>
    </div>
</div>

<style>
    .h-100{
        height: 100vh !important;
    }

    .w-20 {
        width: 20% !important;
        transition: 0.5s ease;
    }

    .setting {
        background-color: #121212;
        border-left: 2px solid #000;
    }

    .content {
        background-color: #121212 !important;
        color: white !important
    }

    .w-64{
        width: 64% !important;
    }

    .left-menu {
        background-color: #efe8e8a1;
        height: 100vh;
    }

    .w-16{
        width: 16% !important;
    }
</style>

@code{

    public string EventRoute = "";

    private void EventValue(string val)
    {
        if(val != null)
        {
            EventRoute = val;
        }
    }
}