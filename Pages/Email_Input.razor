
    <div class="w-100 px-3">
        <div class="@divClass" @onclick="onAction">
            <input type="email" class="form-control" placeholder="Email">
        @if (showActions)
        {
            <div class="d-flex align-items-ceneter justify-content-end p-3 pb-0 px-0">
                <button type="button" class="btn btn-danger btn-sm">Remove</button>
            </div>            
        }
        </div>
    </div>

    <style>
        .selected{
            border: 2px solid lightblue !important;
            border-style: dashed !important;
        }
    </style>

@code {
    private string divClass = "p-3";
    private bool showActions = false;

    private void onAction()
    {
        if (!divClass.Contains("selected"))
        {
            divClass = "selected p-3";
            showActions = true;
        }
        else
        {
            divClass = "p-3";
            showActions = false;
        }
    }
}
